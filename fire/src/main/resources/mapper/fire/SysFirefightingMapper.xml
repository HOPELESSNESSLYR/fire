    <!--
      中文说明：月度汇总查询
      - 按设备组（device_group）分组统计指定日期范围 [startDate, endDate] 内的检查情况
      - 返回字段：
          deviceGroup：设备组（消防栓/灭火器/水泵房/阀组间）
          totalCount：该组下设备总数
          inspectedCount：期间内存在检查记录的设备数量
          uninspectedCount：期间内无检查记录的设备数量
          qualifiedCount：期间内检查记录为“合格(qualified='是')”的设备数量
          unqualifiedCount：期间内检查记录为“不合格(qualified='否')”的设备数量
      - 注意：startDate、endDate 为字符串格式 'yyyy-MM-dd'
    -->
    <select id="selectMonthlySummary" resultType="com.degson.fire.domain.vo.MonthlySummaryVO">
        SELECT
            f.device_group AS deviceGroup,
            COUNT(1) AS totalCount,
            SUM(CASE WHEN EXISTS (
                SELECT 1 FROM sys_firerecord r
                WHERE r.fire_id = f.fire_id
                  AND r.check_records BETWEEN #{startDate} AND #{endDate}
            ) THEN 1 ELSE 0 END) AS inspectedCount,
            SUM(CASE WHEN EXISTS (
                SELECT 1 FROM sys_firerecord r3
                WHERE r3.fire_id = f.fire_id
                  AND r3.check_records BETWEEN #{startDate} AND #{endDate}
                  AND r3.qualified = '是'
            ) THEN 1 ELSE 0 END) AS qualifiedCount,
            SUM(CASE WHEN EXISTS (
                SELECT 1 FROM sys_firerecord r4
                WHERE r4.fire_id = f.fire_id
                  AND r4.check_records BETWEEN #{startDate} AND #{endDate}
                  AND r4.qualified = '否'
            ) THEN 1 ELSE 0 END) AS unqualifiedCount,
            (COUNT(1) - SUM(CASE WHEN EXISTS (
                SELECT 1 FROM sys_firerecord r5
                WHERE r5.fire_id = f.fire_id
                  AND r5.check_records BETWEEN #{startDate} AND #{endDate}
            ) THEN 1 ELSE 0 END)) AS uninspectedCount
        FROM sys_firefighting f
        WHERE f.device_group IN ('消防栓','灭火器','水泵房','阀组间')
        GROUP BY f.device_group
    </select>
