<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.degson.fire.mapper.HrInformationboardMapper">
    
    <resultMap type="HrInformationboard" id="HrInformationboardResult">
        <result property="id"    column="id"    />
        <result property="jobNumber"    column="jobNumber"    />
        <result property="department"    column="department"    />
        <result property="name"    column="name"    />
        <result property="IDnumber"    column="IDnumber"    />
        <result property="job"    column="job"    />
        <result property="company"    column="company"    />
        <result property="liveDate"    column="liveDate"    />
        <result property="createBy"    column="create_by"    />
        <result property="createTime"    column="create_time"    />
        <result property="updateBy"    column="update_by"    />
        <result property="updateTime"    column="update_time"    />
    </resultMap>

    <sql id="selectHrInformationboardVo">
        select id, jobNumber, department, name, IDnumber, job, company, liveDate, create_by, create_time, update_by, update_time from hr_informationboard
    </sql>

    <select id="selectHrInformationboardList" parameterType="HrInformationboard" resultMap="HrInformationboardResult">
        <include refid="selectHrInformationboardVo"/>
        <where>  
            <if test="jobNumber != null  and jobNumber != ''"> and jobNumber = #{jobNumber}</if>
            <if test="department != null  and department != ''"> and department = #{department}</if>
            <if test="name != null  and name != ''"> and name like concat('%', #{name}, '%')</if>
            <if test="job != null  and job != ''"> and job = #{job}</if>
            <if test="company != null  and company != ''"> and company = #{company}</if>
            <if test="liveDate != null "> and liveDate = #{liveDate}</if>
        </where>
    </select>
    
    <select id="selectHrInformationboardById" parameterType="Long" resultMap="HrInformationboardResult">
        <include refid="selectHrInformationboardVo"/>
        where id = #{id}
    </select>

    <insert id="insertHrInformationboard" parameterType="HrInformationboard" useGeneratedKeys="true" keyProperty="id">
        insert into hr_informationboard
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="jobNumber != null and jobNumber != ''">jobNumber,</if>
            <if test="department != null and department != ''">department,</if>
            <if test="name != null and name != ''">name,</if>
            <if test="IDnumber != null">IDnumber,</if>
            <if test="job != null and job != ''">job,</if>
            <if test="company != null and company != ''">company,</if>
            <if test="liveDate != null">liveDate,</if>
            <if test="createBy != null">create_by,</if>
            <if test="createTime != null">create_time,</if>
            <if test="updateBy != null">update_by,</if>
            <if test="updateTime != null">update_time,</if>
         </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="jobNumber != null and jobNumber != ''">#{jobNumber},</if>
            <if test="department != null and department != ''">#{department},</if>
            <if test="name != null and name != ''">#{name},</if>
            <if test="IDnumber != null">#{IDnumber},</if>
            <if test="job != null and job != ''">#{job},</if>
            <if test="company != null and company != ''">#{company},</if>
            <if test="liveDate != null">#{liveDate},</if>
            <if test="createBy != null">#{createBy},</if>
            <if test="createTime != null">#{createTime},</if>
            <if test="updateBy != null">#{updateBy},</if>
            <if test="updateTime != null">#{updateTime},</if>
         </trim>
    </insert>

    <update id="updateHrInformationboard" parameterType="HrInformationboard">
        update hr_informationboard
        <trim prefix="SET" suffixOverrides=",">
            <if test="jobNumber != null and jobNumber != ''">jobNumber = #{jobNumber},</if>
            <if test="department != null and department != ''">department = #{department},</if>
            <if test="name != null and name != ''">name = #{name},</if>
            <if test="IDnumber != null">IDnumber = #{IDnumber},</if>
            <if test="job != null and job != ''">job = #{job},</if>
            <if test="company != null and company != ''">company = #{company},</if>
            <if test="liveDate != null">liveDate = #{liveDate},</if>
            <if test="createBy != null">create_by = #{createBy},</if>
            <if test="createTime != null">create_time = #{createTime},</if>
            <if test="updateBy != null">update_by = #{updateBy},</if>
            <if test="updateTime != null">update_time = #{updateTime},</if>
        </trim>
        where id = #{id}
    </update>

    <delete id="deleteHrInformationboardById" parameterType="Long">
        delete from hr_informationboard where id = #{id}
    </delete>

    <delete id="deleteHrInformationboardByIds" parameterType="String">
        delete from hr_informationboard where id in 
        <foreach item="id" collection="array" open="(" separator="," close=")">
            #{id}
        </foreach>
    </delete>
</mapper>